<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pluboch.actionreaction.EditActionReactionActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action-Reaction name:"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_column="0"
        app:layout_row="0"
        />


    <EditText
        android:id="@+id/edtActionReactionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="i.e. Unmute at 7 am"
        android:inputType="text"
        app:layout_column="0"
        app:layout_row="1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action type"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_column="0"
        app:layout_row="2" />

    <Spinner
        android:id="@+id/spnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_column="0"
        app:layout_row="3" />

    <Button
        android:id="@+id/btnActionParameters"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="Action parameters"
        app:layout_column="0"
        app:layout_row="4"
        android:onClick="selectActionProperties"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reaction type"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_column="0"
        app:layout_row="5" />

    <Spinner
        android:id="@+id/spnReaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_column="0"
        app:layout_row="6" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reaction parameters"
        app:layout_column="0"
        app:layout_row="7"
        android:onClick="selectReactionProperties"/>

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="129dp"
        android:layout_height="69dp"
        android:onClick="finish"
        android:text="Save"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="8" />
</android.support.v7.widget.GridLayout>

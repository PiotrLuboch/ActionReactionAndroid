<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pluboch.actionreaction.reactions.activities.SmsSendReaction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type the nuber in ..."
        android:textAppearance="@android:style/TextAppearance.Material.Large"
         />

    <EditText
        android:id="@+id/edtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="13"
        android:inputType="phone"
        app:layout_column="0"
        app:layout_row="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="... or select it from the contact list"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_column="0"
        app:layout_row="2" />

    <Button
        android:id="@+id/btnSelectNumber"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Select number"
        app:layout_column="0"
        app:layout_row="3"
        android:onClick="selectNumberFromContactList"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Message to be send"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_column="0"
        app:layout_row="4" />

    <EditText
        android:id="@+id/edtSmsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_column="0"
        app:layout_row="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="center"
        android:text="Confirm"
        app:layout_column="0"
        app:layout_row="6"
        android:onClick="finishSmsSendReaction"/>

</android.support.v7.widget.GridLayout>

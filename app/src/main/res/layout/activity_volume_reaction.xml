<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pluboch.actionreaction.reactions.activities.VolumeReaction">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume level"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:layout_marginTop="15dp"
        app:layout_column="0"
        app:layout_row="0"/>

    <SeekBar
        android:id="@+id/barVolume"
        android:layout_width="282dp"
        android:layout_height="44dp"
        app:layout_column="0"
        app:layout_row="1" />

    <TextView
        android:id="@+id/txtVolumeLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:text="Volume level: ?/?"
        app:layout_column="0"
        app:layout_row="2"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_column="0"
        app:layout_row="3"
        app:layout_gravity="center"
        android:onClick="finishVolumeReaction"/>
</android.support.v7.widget.GridLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pluboch.actionreaction.actions.activities.WifiNameAction">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi network name"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_column="0"
        app:layout_row="0" />

    <EditText
        android:id="@+id/edtWifiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Wifi network name..."
        android:inputType="textPersonName"
        app:layout_column="0"
        app:layout_row="1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_column="0"
        app:layout_row="2"
        app:layout_gravity="center"
        android:onClick="finishWifiNameAction"/>


</android.support.v7.widget.GridLayout>
